generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  role      String   @default("USER")
  createdAt DateTime @default(now())
}

model Product {
  id    String @id @default(uuid())
  name  String
  price Int
}

model Order {
  id        String   @id @default(uuid())
  userId    String
  productId String
  status    String   @default("PENDING")
  createdAt DateTime @default(now())
}